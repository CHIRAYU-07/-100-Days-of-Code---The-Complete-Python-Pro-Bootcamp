MENU = {
    "espresso": {
        "ingredients": {
            "water": 50,
            "coffee": 18,
        },
        "cost": 1.5,
    },
    "latte": {
        "ingredients": {
            "water": 200,
            "milk": 150,
            "coffee": 24,
        },
        "cost": 2.5,
    },
    "cappuccino": {
        "ingredients": {
            "water": 250,
            "milk": 100,
            "coffee": 24,
        },
        "cost": 3.0,
    }
}

resources = {
    "water": 300,
    "milk": 200,
    "coffee": 100,
}


def is_resources_available(order_ingredient):
    """Returns True & False where ingredients are short"""
    for item in order_ingredient:
        if order_ingredient[item] >= resources[item]:
            print(f"Sorry there is not enough {item}.")
            return False
    return True


def collect_money():
    """Returns of the Total collected coins"""
    print("Please insert coins.")
    total = int(input("How many quarters? : ")) * 0.25
    total += int(input("How many dimes? : ")) * 0.1
    total += int(input("How many nickles? : ")) * 0.05
    total += int(input("How many pennies? : ")) * 0.01
    return total


def transaction_success(collected_coins, drink_cost):
    """Returns True when the payment is accepted & False when payment is less."""
    if collected_coins > drink_cost:
        change: object = round(collected_coins - drink_cost, 2)
        print(f"Here is $ {change} dollars in change.")
        global money
        money += drink_cost
        return True
    else:
        print("Sorry that's not enough money. Money refunded.")
        return False


def coffee_making(drink_name, order_ingredient):
    """Reducing the ingredients after order"""
    for item in order_ingredient:
        resources[item] -= order_ingredient[item]
    print(f"Here is your {drink_name} â˜•.\n Enjoy!")


is_on = True
money: int = 0

while is_on:
    users_coffee_choice = input("What would you like? (espresso/latte/cappuccino): ")
    if users_coffee_choice == "off":
        is_on = False
    elif users_coffee_choice == "report":
        print(
            f" Water:{resources['water']}ml\n Milk:{resources['milk']}ml\n Coffee:{resources['coffee']}g\n Money:${money}")
    # def report(users_coffee_choice):
    #     """This function will report the current status of the machine's current status and money"""
    #     if users_coffee_choice == "report":
    #         return f" Water:{resources_water}ml\n Milk:{resources_milk}ml\n Coffee:{resources_coffee}g\n Money:${money}"
    #
    # report_machine = report(users_coffee_choice)
    # print(report_machine)
    else:
        drink = MENU[users_coffee_choice]
        if is_resources_available(drink["ingredients"]):
            payment = collect_money()
            if transaction_success(payment, drink["cost"]):
                coffee_making(users_coffee_choice,drink["ingredients"])


